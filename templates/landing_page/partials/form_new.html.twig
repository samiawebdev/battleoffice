            </div>
            <div class="input-field">
                {{ form_row(form.phone, {'label': 'Téléphone', 'attr': {'id': 'phone'}}) }}
                <div class="form-error">{{ form_errors(form.phone) }}</div>
            </div>
            <div class="input-field">
